---
import "@/styles/global.css";
import { SiteFooter, SiteHeader } from "@/components/astro";

const { title } = Astro.props.content;
const desc = "Astro Server Islands + Gemini API + AI SDK starter template";

const baseUrl = "https://astro-ai-review-summary.vercel.app";
const path = new URL(Astro.url).pathname;
const fullUrl = `${baseUrl}${path}`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generated" content={new Date().toISOString()} />

		<title>{title}</title>
		<meta name="description" content={desc} />
		<link rel="canonical" href={fullUrl} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={fullUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={desc} />

		<meta property="twitter:card" content="summary" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={desc} />
	</head>
	<body class="dark">
		<SiteHeader />
		<main class="container mx-auto max-w-6xl px-4 py-8">
			<slot />
		</main>
		<SiteFooter />
	</body>
</html>
